<p id="notice"><%= notice %></p>

<strong>Ticks for <%= @user.name %>:</strong>

<table class="table">
  <thead>
    <tr>
      <th>The Tick</th>
      <th>The Time</th>
    </tr>
  </thead>
  <tbody>
  <% @user.ticks.each do |tick| %>
    <tr>
      <td><%= tick.detail %></td>
      <td><%= tick.created_at.strftime('%m/%d/%Y - %I:%M:%S %p') %></td>
    </tr>
  <% end %>
  </tbody>
</table>
